apiVersion: volsync.backube/v1alpha1
kind: ReplicationDestination
metadata:
  name: {{appName}}-backup
  namespace: {{namespace}}
  labels:
    app.kubernetes.io/name: {{appName}}
spec:
  trigger:
    schedule: "0 2 * * *"  # Daily at 2 AM
  restic:
    pruneIntervalDays: {{retentionDays}}
    repository: restic-backup-repo  # ConfigMap with S3 repo URL
    copyMethod: Snapshot
    accessMode: ReadWriteOnce
    capacity: {{storageSize}}Gi
    storageClassName: longhorn
    volumeSnapshotClassName: longhorn-snapshot
    moverSecurityContext:
      runAsUser: 1000
      runAsGroup: 1000
      fsGroup: 1000
