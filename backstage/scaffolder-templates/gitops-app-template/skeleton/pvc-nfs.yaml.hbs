apiVersion: v1
kind: PersistentVolume
metadata:
  name: {{appName}}-nfs-pv
  labels:
    app.kubernetes.io/name: {{appName}}
spec:
  capacity:
    storage: {{storageSize}}Gi
  accessModes:
    - ReadWriteMany
  nfs:
    server: {{nasServer}}
    path: {{nasSubpath}}
  mountOptions:
    - nfsvers=4.1
    - hard
    - timeo=600
    - retrans=2
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: {{appName}}-data
  namespace: {{namespace}}
  labels:
    app.kubernetes.io/name: {{appName}}
spec:
  accessModes:
    - ReadWriteMany
  resources:
    requests:
      storage: {{storageSize}}Gi
  volumeName: {{appName}}-nfs-pv
