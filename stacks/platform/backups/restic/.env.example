# Restic backup environment variables
# Create this file at /mnt/apps01/secrets/restic/restic.env on the host

# Restic repository location (S3 endpoint)
RESTIC_REPOSITORY=s3:https://s3.example.com/bucket-name

# Restic repository password
RESTIC_PASSWORD=your-secure-password

# S3 credentials
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_ENDPOINT=https://s3.example.com
AWS_DEFAULT_REGION=us-east-1
