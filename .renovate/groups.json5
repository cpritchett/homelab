{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  packageRules: [
    {
      description: "op-export stack dependencies",
      groupName: "op-export stack",
      matchFileNames: ["stacks/platform/secrets/op-export/**"],
      semanticCommitScope: "op-export",
      group: { commitMessageTopic: "{{{groupName}}}" }
    },
    {
      description: "forgejo stack dependencies",
      groupName: "forgejo stack",
      matchFileNames: ["stacks/platform/cicd/forgejo/**"],
      semanticCommitScope: "forgejo-stack",
      group: { commitMessageTopic: "{{{groupName}}}" }
    },
    {
      description: "woodpecker stack dependencies",
      groupName: "woodpecker stack",
      matchFileNames: ["stacks/platform/cicd/woodpecker/**"],
      semanticCommitScope: "woodpecker-stack",
      group: { commitMessageTopic: "{{{groupName}}}" }
    },
    {
      description: "backstage dependencies",
      groupName: "backstage",
      matchFileNames: ["backstage/**"],
      semanticCommitScope: "backstage",
      group: { commitMessageTopic: "{{{groupName}}}" }
    },
    {
      description: "1Password Connect Group",
      groupName: "1Password Connect",
      matchDatasources: ["docker"],
      matchPackageNames: ["/1password/"],
      semanticCommitScope: "1password",
      group: { commitMessageTopic: "{{{groupName}}} group" }
    },
    {
      description: "Cloudflare Group",
      groupName: "Cloudflare",
      matchDatasources: ["docker", "github-releases"],
      matchPackageNames: ["/cloudflare/", "/cloudflared/"],
      semanticCommitScope: "dns",
      group: { commitMessageTopic: "{{{groupName}}} group" }
    },
    {
      description: "PostgreSQL Group",
      groupName: "PostgreSQL",
      matchDatasources: ["docker"],
      matchPackageNames: ["/postgresql/", "/postgres/"],
      semanticCommitScope: "database",
      group: { commitMessageTopic: "{{{groupName}}} group" }
    },
    {
      description: "Home Automation Stack",
      groupName: "Home Automation",
      matchDatasources: ["docker"],
      matchPackageNames: ["/home-assistant/", "/zigbee2mqtt/", "/mosquitto/"],
      semanticCommitScope: "home",
      group: { commitMessageTopic: "{{{groupName}}} group" }
    },
    {
      description: "Monitoring Stack Group",
      groupName: "Monitoring Stack",
      matchDatasources: ["docker"],
      matchPackageNames: ["/prometheus/", "/grafana/", "/alertmanager/", "/loki/", "/promtail/", "/alloy/"],
      semanticCommitScope: "monitoring",
      group: { commitMessageTopic: "{{{groupName}}} group" }
    },
    {
      description: "Media Stack Group",
      groupName: "Media Stack",
      matchDatasources: ["docker"],
      matchPackageNames: ["/sonarr/", "/radarr/", "/prowlarr/", "/bazarr/", "/plex/", "/seerr/", "/tdarr/", "/recyclarr/", "/flaresolverr/", "/qbittorrent/", "/wizarr/"],
      semanticCommitScope: "media",
      group: { commitMessageTopic: "{{{groupName}}} group" }
    },
    {
      description: "Authentik Group",
      groupName: "Authentik",
      matchDatasources: ["docker"],
      matchPackageNames: ["/authentik/"],
      semanticCommitScope: "auth",
      group: { commitMessageTopic: "{{{groupName}}} group" }
    },
    {
      description: "Caddy Group",
      groupName: "Caddy",
      matchDatasources: ["docker"],
      matchPackageNames: ["/caddy/"],
      semanticCommitScope: "ingress",
      group: { commitMessageTopic: "{{{groupName}}} group" }
    }
  ]
}
